@model ElibForumMVC.Models.Forum.AddForumModel

<div class="container emp-profile">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Направи нов Форум
        </div>
    </div>
    <div class="row">
        <div id="createForunSection">
            <form asp-action="AddForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Име на Форумот</label>
                    <input asp-for="Title" class="form-control" placeholder="Избери име за новиот Форум" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Опис на Форум</label>
                    <input asp-for="Description" class="form-control" placeholder="Внеси краток опис за форумот" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Качи Слика</label>
                    <br />
                    <label class="btn btn-info">
                        Отвори
                        <input asp-for="ImageUpload" typeof="file" style="display: none" />        
                    </label>
                </div>
                <button type="submit" id="newFormBtn" class="btn btn-success">Направи Форум</button>
            </form>
        </div>
    </div>
</div>