@model ElibForumMVC.Models.Reply.PostReplyModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeader">
            Одговор на @Model.PostTitle
        </div>
        <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl)"></div>
        <span id="headingBtn">
            <a asp-controller="Post"
               asp-action="Index"
               asp-route-id="@Model.PostId"></a>
        </span>
    </div>
    <div class="row">
        <div id="postReply">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostConten
            </p>
        </div>
    </div>

    <div class="row">
        <div id="CreateReply">
            <div class="authorBlock">
                Ти го испраќаш овај одговор како @Model.AuthorName
            </div>

            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Одговор:</label>
                    <textarea asp-for="ReplyContent"
                        rows="20" class="form-control" 
                        placeholder="Твојот одговор:..."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitReplyBtn" class="btn btn-success">Испрати Одговор</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>

        </div>
    </div>



</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
